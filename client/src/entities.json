{
    "users": {
        "fields": {
            "name": {
                "type": "text"
            },
            "email": {
                "type": "email"
            }
        }
    },
    "categories": {
        "fields": {
            "name": {
                "type": "text"
            },
            "slug": {
                "type": "text"
            }
        }
    },
    "tags": {
        "fields": {
            "name": {
                "type": "text"
            },
            "slug": {
                "type": "text"
            }
        }
    },
    "articles": {
        "fields": {
            "title": {
                "name": "Title",
                "type": "text",
                "placeholder": "Enter a title"
            },
            "body": {
                "name": "Body",
                "type": "textarea",
                "label": "Content"
            }
        },
        "related": {
            "author": {
                "name": "Author",
                "type": "radio",
                "on": "users",
                "option": "name",
                "value": "_id"
            }
        }
    },
    "comments": {
        "fields": {
            "author": {
                "type": "ID"
            },
            "body": {
                "type": "textarea"
            }
        }
    }
}